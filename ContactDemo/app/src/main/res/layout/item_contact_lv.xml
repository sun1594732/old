<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_contact_name"
    android:textSize="28sp"
    android:textColor="#000"
    android:text="123"
    android:padding="10dp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/item_contact_name"
    android:id="@+id/item_contact_age"
    android:textSize="22sp"
    android:textColor="#000"
    android:text="123"
    android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_contact_phone"
        android:layout_alignBottom="@+id/item_contact_age"
        android:layout_toRightOf="@+id/item_contact_age"
        android:textSize="22sp"
        android:layout_marginLeft="30dp"
        android:textColor="#000"
        android:text="123"
        android:padding="10dp"/>
</RelativeLayout>