<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#1d1a1a"
    android:id="@+id/mine_userRelative">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/mine_user_icon"
        android:src="@mipmap/icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="个人中心"
        android:layout_marginTop="5dp"
        android:textSize="24sp"
        android:id="@+id/mine_user_name"
        android:textColor="#fff"
        android:layout_below="@+id/mine_user_icon"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="某某某"
        android:textSize="20sp"
        android:id="@+id/mine_user_company"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="#fff"
        android:background="#cc111010"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"
        android:id="@+id/mine_detail">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的信息"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"
        android:id="@+id/mine_record">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约人员列表"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
</LinearLayout>